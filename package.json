{
  "name": "brains",
  "version": "1.0.0",
  "description": "A modern, powerful workspace application inspired by Wave Terminal. Built with Electron, Next.js, and TypeScript.",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently -k \"next dev -p 50000\" \"wait-on http://localhost:50000 && cross-env ELECTRON_START_URL=http://localhost:50000 electron .\"",
    "build:ui": "next build",
    "build": "npm run build:ui",
    "dist": "npm run build:ui && electron-builder",
    "dist:linux": "npm run build:ui && electron-builder --linux",
    "dist:win": "npm run build:ui && electron-builder --win",
    "dist:mac": "npm run build:ui && electron-builder --mac",
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "clean": "rm -rf .next out dist node_modules/.cache"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.548.0",
    "next": "^16.0.0",
    "node-pty": "^1.0.0",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-resizable-panels": "^3.0.6",
    "recharts": "^3.3.0",
    "systeminformation": "^5.27.11",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.brains.app",
    "productName": "Brains",
    "files": [
      "electron/**/*",
      "out/**/*",
      "package.json",
      "!**/{.DS_Store,.git,.gitignore,.vscode,*.map}"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "compression": "maximum",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "synopsis": "Modern workspace with terminal, system monitor, and widgets"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    }
  }
}
